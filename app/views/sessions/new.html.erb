<% provide(:title, "Log in") %>

<div class="login">
<div class="container">
  <div>
    <div class="login-holder one-edge-shadow">
      <h2>FlipCoin Member Login</h2>
      <p id="ERRnexistence" class="pp-description">
        New user?<br>
        <%= link_to "Sign up now!", signup_path %>
      </p>
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.email_field :email, class: 'form-control' %>
        <%= f.label :email %>
        <p class="pp-description">
          <%= link_to "(forgot password)", new_password_reset_path %>
        </p>
        <%= f.password_field :password, class: 'form-control' %>
        <%= f.label :password %>

        <div class="kamikaze_btn">
          <%= f.submit "Log in", class: "btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>